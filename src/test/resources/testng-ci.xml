<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CI/CD Test Suite" parallel="false" thread-count="1" verbose="1">
    
    <listeners>
        <listener class-name="com.nopcommerce.listeners.TestListener"/>
    </listeners>
    
    <!-- 
        Browser parameter will be passed from command line: -Dbrowser=chrome
        This suite runs all tests sequentially on a single browser
    -->
    
    <test name="Home Page Tests" preserve-order="true">
        <classes>
            <class name="com.nopcommerce.tests.HomePageTest"/>
        </classes>
    </test>
    
    <test name="Registration Tests" preserve-order="true">
        <classes>
            <class name="com.nopcommerce.tests.RegistrationTest"/>
        </classes>
    </test>
    
    <test name="Login Tests" preserve-order="true">
        <classes>
            <class name="com.nopcommerce.tests.LoginTest"/>
        </classes>
    </test>
    
    <test name="Search Tests" preserve-order="true">
        <classes>
            <class name="com.nopcommerce.tests.SearchTest"/>
        </classes>
    </test>
    
    <test name="Navigation Menu Tests" preserve-order="true">
        <classes>
            <class name="com.nopcommerce.tests.NavigationMenuEnhancedTest"/>
        </classes>
    </test>
    
</suite>
