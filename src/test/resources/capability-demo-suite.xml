<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!-- 
    Sample TestNG Suite for demonstrating YAML-based capability management
    
    Usage Examples:
    
    1. Run locally with Chrome:
       mvn test -DsuiteXmlFile=capability-demo-suite.xml -Dexecution.platform=LOCAL
    
    2. Run on LambdaTest with Chrome:
       mvn test -DsuiteXmlFile=capability-demo-suite.xml -Dexecution.platform=LAMBDATEST
    
    3. Run parallel tests with different browsers:
       mvn test -DsuiteXmlFile=capability-demo-parallel-suite.xml
-->

<suite name="Capability Demo Suite" verbose="1">
    <test name="Chrome Local Test" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.nopcommerce.examples.CapabilityDemoTest">
                <methods>
                    <include name="testWithDefaultConfiguration"/>
                    <include name="testWithChromeBrowser"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
