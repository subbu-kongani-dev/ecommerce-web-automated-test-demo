<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Browser Test Suite" parallel="tests" thread-count="4" verbose="1">
    
    <listeners>
        <listener class-name="com.nopcommerce.listeners.TestListener"/>
    </listeners>
    
    <!-- Chrome Browser Tests -->
    <test name="Chrome - Home Page Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.nopcommerce.tests.HomePageTest"/>
        </classes>
    </test>
    
    <test name="Chrome - Search Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.nopcommerce.tests.SearchTest"/>
        </classes>
    </test>
    
    <!-- Firefox Browser Tests -->
    <test name="Firefox - Registration Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.nopcommerce.tests.RegistrationTest"/>
        </classes>
    </test>
    
    <test name="Firefox - Login Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.nopcommerce.tests.LoginTest"/>
        </classes>
    </test>
    
</suite>
