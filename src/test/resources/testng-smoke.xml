<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Test Suite" parallel="false" thread-count="1" verbose="1">
    
    <listeners>
        <listener class-name="com.nopcommerce.listeners.TestListener"/>
    </listeners>
    
    <test name="Smoke Tests" preserve-order="true">
        <classes>
            <class name="com.nopcommerce.tests.HomePageTest">
                <methods>
                    <include name="testHomePageTitle"/>
                    <include name="testHomePageLogo"/>
                </methods>
            </class>
            <class name="com.nopcommerce.tests.LoginTest">
                <methods>
                    <include name="testLoginPageNavigation"/>
                </methods>
            </class>
            <class name="com.nopcommerce.tests.SearchTest">
                <methods>
                    <include name="testSearchWithValidProduct"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>
